extends ../layout/index

block content
    .py-10 
        h1.my-10.text-center.text-4xl.font-extrabold Bienes
            span.font-normal Raices
        h2.text-center.text-4xl.font-extrabold= page
        if errores
            div(class="max-w-md mx-auto my-10")
                each error in errores 
                    p(class=" bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold" )= error.msg
        .mt-8.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow            
                form.space-y-5(action="/auth/forgot-password" method="POST")
                    input(type="hidden" name="_csrf" value=csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") E-mail
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(name="email" type="email" placeholder="E-mail")
                    input(class="w-full cursor-pointer bg-indigo-800 hover:bg-indigo-900 text-white font-bold text-lg py-2 px-4 rounded-lg" type="submit" value="Recuperar Password")
                .mt-5.flex.items-center.justify-between
                    a(href="/auth/login" class="text-indigo-500 hover:text-indigo-700") Iniciar Sesi√≥n
                    a(href="/auth/register" class="text-indigo-500 hover:text-indigo-700") Crear Cuenta